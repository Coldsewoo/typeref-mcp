{
  "name": "typeref-mcp",
  "version": "0.2.2",
  "description": "TypeScript type inference and symbol navigation MCP server for Claude Code",
  "keywords": [
    "mcp",
    "typescript",
    "type-inference",
    "symbol-navigation",
    "intellisense",
    "claude-code"
  ],
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "typeref-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsx watch src/index.ts",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "typescript": "^5.6.0",
    "ts-morph": "^21.0.0",
    "chokidar": "^3.6.0",
    "hyparquet": "^1.17.8",
    "hyparquet-writer": "^0.6.1",
    "hysnappy": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.7.0",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Coldsewoo/typeref-mcp.git"
  },
  "license": "MIT",
  "author": "Coldsewoo"
}
